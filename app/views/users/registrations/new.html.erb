<div class="container">
  <div class="row mt-5">
    <div class="col-md-5 col-sm-7 mx-sm-auto mx-md-auto">
      <div class="card mt-5 rounded-0 shadow mb-5">
        <div class="card-header"> 
          <h2 class="text-center">Sign up</h2>
        </div>
        <div class="card-body">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>  
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-0 form-control-lg", required: :true %>
            </div>

            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, class: "form-control rounded-0 form-control-lg", required: :true %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, class: "form-control rounded-0 form-control-lg", required: :true %>
            </div>

            <!-- <div class="form-group">
            <%#= f.label :role %><br />
            <%#= f.select :role, options_for_select(User::ROLE, selected: f.object.try(:additional_id)), {include_blank: "Select Role"}, {class: "form-control rounded-0", required: :true} %>
            </div> -->


            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0 form-control-lg", required: :true%>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0 form-control-lg", required: :true %>
            </div>


            <div class="actions">
              <%= f.submit "Register", class: "btn btn-lg btn-primary btn-block rounded-0 shadow mt-3" %>
            </div>
            <%= render "users/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
